        <TextBox Margin="49,98,74,408" materialDesign:HintAssist.Hint="NOMBRE" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Champagne &amp; Limousines" FontSize="18" Grid.RowSpan="2"/>
        <TextBox Margin="49,40,74,326" materialDesign:HintAssist.Hint="APELLIDOS" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Champagne &amp; Limousines" FontSize="18" Grid.Row="1"/>
        <TextBox Margin="47,115,76,251" materialDesign:HintAssist.Hint="NOMBRE DE USUARIO" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Champagne &amp; Limousines" FontSize="18" Grid.Row="1"/>
        <Label Content="CARGO" FontFamily="Champagne &amp; Limousines" Foreground="Gray" FontSize="18" HorizontalAlignment="Left" Margin="49,-13,0,0" VerticalAlignment="Top" Height="39" Width="117"/>
        <ComboBox HorizontalAlignment="Left" Background="#DADADA" Margin="171,-13,0,0" VerticalAlignment="Top" Width="277" Height="34"/>
        <TextBox Margin="47,199,76,167" materialDesign:HintAssist.Hint="CONTRASEÑA" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Champagne &amp; Limousines" FontSize="18" Grid.Row="1"/>
        <Label Content="PERSONAL" FontFamily="Champagne &amp; Limousines" Foreground="Gray" FontSize="18" HorizontalAlignment="Left" Margin="49,54,0,0" VerticalAlignment="Top" Height="39" Width="117"/>
        <ComboBox HorizontalAlignment="Left" Background="#DADADA" Margin="171,59,0,0" VerticalAlignment="Top" Width="277" Height="34"/>

    </Grid>
</Window>
